<main>
<h1>Open Vagas</h1>
<p>Mural de vagas compartilhadas pela comunidade.</p>

<form action="<%= root_path %>" method="get">
  <div class="row">
    <div class="col-sm">
      <div class="form-group">
        <label for="q_name_cont">Carreira</label>
        <input type="search" name="q[name_cont]" id="q_name_cont" class="form-control">
      </div>
    </div>
    <div class="col-sm">
      <div class="form-group">
        <label for="q_contract_eq">Modalidade</label>
        <select name="q[contract_eq]" id="q_contract_eq" class="form-control">
          <option value=""></option>
        </select>
      </div>
    </div>
    <div class="col-sm">
      <div class="form-group">
        <label for="q_state_eq">Localidade</label>
        <select name="q[state_eq]" id="q_state_eq" class="form-control">
          <option value=""></option>
        </select>
      </div>
    </div>
    <div class="col-sm">
      <button class="btn btn-danger" type="submit" style="margin-top: 31px;">Pesquisar</button>
    </div>
  </div>
</form>

<% @positions.each do |position| %>
  <%= render position %>
<% end %>

