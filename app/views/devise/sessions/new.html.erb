<h2 class="h3 mb-3 font-weight-normal" style="text-align: center; padding-top: 10px"> Login </h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%=f.error_notification%>
  <div class="field">
    <%= f.input :email,required: true, label: false, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-mail"%>
    <%= f.input :password,required: true, label: false, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "remember" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
  </div>
<hr>

  <%= render "devise/shared/links" %>
  <%= render "devise/shared/error_messages"%>
<% end %>

